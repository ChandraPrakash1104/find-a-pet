<% layout('layouts/boilerplate') %>

<head>
    <title>Edit</title>
</head>
<div class="row">
    <h1 class="text-center">New Animal</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/adoptables/<%=adoptable._id%>?_method=PUT" method="POST" novalidate class="validation-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="adoptable[title]" required
                    value="<%=adoptable.title %>">
                <div class="valid-feedback">
                    Looks good
                </div>
            </div>
            <div class="mb-3">
                <label lass="form-label" for="adoptable">Location</label>
                <input class="form-control" type="text" id="adoptable" name="adoptable[location]" required
                    value="<%=adoptable.location %>">
                <div class="valid-feedback">
                    Looks good
                </div>
            </div>
            <div class="mb-3">
                <label lass="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" required
                    name="adoptable[description]"><%= adoptable.description %> </textarea>
                <div class="valid-feedback">
                    Looks good
                </div>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Add More Images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>

            <div class="mb-3">
                <% adoptable.images.forEach(function(img, i){%>
                <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete</label>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update</button>
            </div>
        </form>
        <a href="/adoptables/<%=adoptable._id%>">Back To Details</a>
    </div>
</div>